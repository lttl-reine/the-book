<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:progress="50"
            android:visibility="gone"
            app:indicatorColor="?attr/colorSecondary"/>

        <!-- Header with back button and title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_arrow_back_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Thêm Sách Mới"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_profile"
                android:background="@drawable/circle_background" />

        </LinearLayout>

        <!-- Book Details Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chi Tiết Sách"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="16dp" />

        <!-- Title Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiêu đề *"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/et_title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Nhập tiêu đề sách"
            android:background="@drawable/et_background"
            android:padding="12dp"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <!-- Author Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tác giả *"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/et_author"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Nhập tên tác giả"
            android:background="@drawable/et_background"
            android:padding="12dp"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <!-- Genre Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thể loại"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:chipSpacingHorizontal="8dp"
            app:chipSpacingVertical="8dp"
            app:singleLine="false"
            app:selectionRequired="false"
            app:singleSelection="false"
            style="@style/CustomCheckableChipStyle"
            android:backgroundTint="@color/grey_700"
            android:layout_marginBottom="16dp">

        </com.google.android.material.chip.ChipGroup>

        <!-- Description Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mô tả"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/et_description"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="Nhập tóm tắt ngắn gọn về sách (tối đa 500 ký tự)"
            android:background="@drawable/et_background"
            android:padding="12dp"
            android:textSize="14sp"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:maxLength="500"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_char_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/500"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:layout_gravity="end"
            android:layout_marginBottom="16dp" />

        <!-- Published Year and Page Count -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Năm Xuất bản"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/et_published_year"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="2025"
                    android:background="@drawable/et_background"
                    android:padding="12dp"
                    android:textSize="14sp"
                    android:inputType="number" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số Trang"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/et_page_count"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="250"
                    android:background="@drawable/et_background"
                    android:padding="12dp"
                    android:textSize="14sp"
                    android:inputType="number" />

            </LinearLayout>

        </LinearLayout>

        <!-- Language Dropdown -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngôn ngữ"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinner_language"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/et_background"
            android:layout_marginBottom="24dp" />

        <!-- Media Upload Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tải Lên Tệp Media"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="16dp" />

        <!-- Cover Image -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ảnh Bìa"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/iv_cover_preview"
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:background="@drawable/book_cover_placeholder"
                android:src="@drawable/book_cover_placeholder"
                android:scaleType="centerInside"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_image_url"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="32dp"
                    android:hint="Nhập URL ảnh"
                    android:background="@drawable/btn_secondary_background"
                    android:padding="8dp"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Book File Upload -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tệp Sách"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/et_epub_url"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Nhập URL epub"
            android:background="@drawable/btn_secondary_background"
            android:padding="8dp"
            android:textSize="12sp"
            android:layout_marginBottom="32dp"/>

        <!-- Save Button -->
        <Button
            android:id="@+id/btn_save_book"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Thêm Sách"
            android:background="@drawable/btn_primary_background"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>