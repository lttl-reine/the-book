<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:progress="50"
            android:visibility="gone"
            app:indicatorColor="?attr/colorSecondary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_arrow_back_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="12dp"
                android:contentDescription="@string/back_button_desc"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/add_new_book_title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_profile"
                android:background="@drawable/circle_background"
                android:contentDescription="@string/profile_icon_desc" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/book_details_section_title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_label"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/et_title"
            android:layout_width="375dp"
            android:layout_height="48dp"
            android:hint="@string/enter_book_title_hint"
            android:background="@drawable/et_background"
            android:padding="12dp"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"
            android:inputType="textCapWords"
            android:importantForAutofill="yes"
            android:autofillHints="bookTitle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/author_label"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/et_author"
            android:layout_width="375dp"
            android:layout_height="48dp"
            android:hint="@string/enter_author_name_hint"
            android:background="@drawable/et_background"
            android:padding="12dp"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"
            android:inputType="textPersonName|textCapWords"
            android:importantForAutofill="yes"
            android:autofillHints="personName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/genre_label"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_genre"
            style="@style/CustomCheckableChipStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/grey_700"
            android:contentDescription="genres"
            app:chipSpacingHorizontal="8dp"
            app:chipSpacingVertical="8dp"
            app:selectionRequired="false"
            app:singleLine="false"
            app:singleSelection="false"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description_label"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/et_description"
            android:layout_width="375dp"
            android:layout_height="120dp"
            android:hint="@string/description_hint"
            android:background="@drawable/et_background"
            android:padding="12dp"
            android:textSize="14sp"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:maxLength="500"
            android:layout_marginBottom="8dp"
            android:importantForAutofill="yes"
            android:autofillHints="longMessage" />

        <TextView
            android:id="@+id/tv_char_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="16dp"
            android:text="@string/char_count_format"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            tools:ignore="TextContrastCheck" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:baselineAligned="false"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/published_year_label"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/et_published_year"
                android:layout_width="60dp"
                android:layout_height="48dp"
                android:hint="@string/published_year_hint"
                android:background="@drawable/et_background"
                android:padding="12dp"
                android:textSize="14sp"
                android:inputType="number"
                android:importantForAutofill="yes"
                android:autofillHints="year"
                android:maxLength="4" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/language_label"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinner_language"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/et_background"
            android:layout_marginBottom="24dp"
            android:importantForAutofill="yes"
            android:autofillHints="language" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/media_upload_section_title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cover_image_label"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/iv_cover_preview"
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:background="@drawable/book_cover_placeholder"
                android:src="@drawable/book_cover_placeholder"
                android:scaleType="centerInside"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/book_cover_preview_desc" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_image_url"
                    android:layout_width="375dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="32dp"
                    android:hint="@string/image_url_hint"
                    android:background="@drawable/btn_secondary_background"
                    android:padding="8dp"
                    android:textSize="12sp"
                    android:inputType="textUri"
                    android:importantForAutofill="yes"
                    android:autofillHints="url" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/book_file_label"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/et_epub_url"
            android:layout_width="375dp"
            android:layout_height="40dp"
            android:hint="@string/epub_url_hint"
            android:background="@drawable/btn_secondary_background"
            android:padding="8dp"
            android:textSize="12sp"
            android:layout_marginBottom="32dp"
            android:inputType="textUri"
            android:importantForAutofill="yes"
            android:autofillHints="url" />

        <Button
            android:id="@+id/btn_save_book"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/add_book_button"
            android:background="@drawable/btn_primary_background"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>