<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with back button and title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_arrow_black"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Add a New Book"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_profile"
                android:background="@drawable/circle_background" />

        </LinearLayout>

        <!-- Book Details Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Details"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="16dp" />

        <!-- Title Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title *"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/et_title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Enter book title"
            android:background="@drawable/et_background"
            android:padding="12dp"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <!-- Author Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Author *"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/et_author"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Enter author name"
            android:background="@drawable/et_background"
            android:padding="12dp"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <!-- Genre Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Genre"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:chipSpacingHorizontal="8dp"
            app:chipSpacingVertical="8dp"
            app:singleLine="false"
            app:selectionRequired="false"
            app:singleSelection="false"
            android:layout_marginBottom="16dp">
        </com.google.android.material.chip.ChipGroup>

        <TextView
            android:id="@+id/btn_add_genre"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="+ Add Genre"
            android:background="@drawable/chip_unselected_background"
            android:textColor="@color/primary_700"
            android:textSize="12sp"
            android:gravity="center"
            android:paddingHorizontal="16dp" />


        <!-- Description Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/et_description"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="Enter a brief summary of the book (max 500 characters)"
            android:background="@drawable/et_background"
            android:padding="12dp"
            android:textSize="14sp"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:maxLength="500"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_char_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/500"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:layout_gravity="end"
            android:layout_marginBottom="16dp" />

        <!-- Published Year and Page Count -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Published Year"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/et_published_year"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="2025"
                    android:background="@drawable/et_background"
                    android:padding="12dp"
                    android:textSize="14sp"
                    android:inputType="number" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Page Count"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/et_page_count"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="250"
                    android:background="@drawable/et_background"
                    android:padding="12dp"
                    android:textSize="14sp"
                    android:inputType="number" />

            </LinearLayout>

        </LinearLayout>

        <!-- Language Dropdown -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Language"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinner_language"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/et_background"
            android:layout_marginBottom="24dp" />

        <!-- Media Upload Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Media Upload"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="16dp" />

        <!-- Cover Image -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cover Image"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/iv_cover_preview"
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:background="@drawable/book_cover_placeholder"
                android:src="@drawable/book_cover_placeholder"
                android:scaleType="centerInside"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_upload_cover"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="ðŸ“ Upload Cover Image"
                    android:background="@drawable/btn_secondary_background"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Or"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/et_image_url"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Or enter image URL"
                    android:background="@drawable/btn_secondary_background"
                    android:padding="8dp"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Book File Upload -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book File"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_upload_file"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="ðŸ“ Upload Book File (PDF, EPUB)"
            android:background="@drawable/btn_secondary_background"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Or"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/et_epub_url"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Or enter image URL"
            android:background="@drawable/btn_secondary_background"
            android:padding="8dp"
            android:textSize="12sp"
            android:layout_marginBottom="32dp"/>

        <!-- Save Button -->
        <Button
            android:id="@+id/btn_save_book"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Save Book"
            android:background="@drawable/btn_primary_background"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>