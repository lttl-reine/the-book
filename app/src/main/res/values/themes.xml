<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TheBook" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorPrimaryVariant">@color/primary_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Surface and background color -->
        <item name="colorSurface">@color/grey_100</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnPrimarySurface">@color/black</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/secondary_500</item>
        <item name="colorSecondaryVariant">@color/secondary_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Ripple effect for selectable items -->

    </style>

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo_icon</item>
        <item name="windowSplashScreenBackground">@color/primary_100</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.TheBook</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/secondary_500</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="chipMinHeight">36dp</item> <item name="android:textSize">14sp</item> </style>

    <style name="CustomCheckableChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="chipMinHeight">36dp</item>
        <item name="android:textSize">14sp</item>
        <item name="chipBackgroundColor">@color/primary_700</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/inter_regular</item>
    </style>

    <style name="Theme.TheBook" parent="Base.Theme.TheBook" />
</resources>