<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_bottom"
    app:startDestination="@id/homeTabFragment">

    <fragment
        android:id="@+id/homeTabFragment"
        android:name="com.example.thebook.ui.home.HomeTabFragment"
        android:label="HomeTabFragment"
        tools:layout="@layout/fragment_home_tab">
        <action
            android:id="@+id/action_homeTabFragment_to_libraryTabFragment"
            app:destination="@id/libraryTabFragment" />
        <action
            android:id="@+id/action_homeTabFragment_to_profileTabFragment"
            app:destination="@id/profileTabFragment" />
        <action
            android:id="@+id/action_homeTabFragment_to_bookDetailFragment"
            app:destination="@id/bookDetailFragment" />
        <action
            android:id="@+id/action_homeTabFragment_to_addBookFragment"
            app:destination="@id/addBookFragment" />

    </fragment>
    <fragment
        android:id="@+id/profileTabFragment"
        android:name="com.example.thebook.ui.profile.ProfileTabFragment"
        android:label="fragment_profile_tab"
        tools:layout="@layout/fragment_profile_tab" >
        <action
            android:id="@+id/action_profileTabFragment_to_homeTabFragment"
            app:destination="@id/homeTabFragment" />
        <action
            android:id="@+id/action_profileTabFragment_to_libraryTabFragment"
            app:destination="@id/libraryTabFragment" />
    </fragment>
    <fragment
        android:id="@+id/libraryTabFragment"
        android:name="com.example.thebook.ui.library.LibraryTabFragment"
        android:label="fragment_library_tab"
        tools:layout="@layout/fragment_library_tab" >
        <action
            android:id="@+id/action_libraryTabFragment_to_homeTabFragment"
            app:destination="@id/homeTabFragment" />
        <action
            android:id="@+id/action_libraryTabFragment_to_profileTabFragment"
            app:destination="@id/profileTabFragment" />
    </fragment>
    <fragment
        android:id="@+id/bookDetailFragment"
        android:name="com.example.thebook.ui.detail.BookDetailFragment"
        android:label="fragment_book_detail"
        tools:layout="@layout/fragment_book_detail">
        <argument
            android:name="bookId"
            app:argType="string"/>
        <action
            android:id="@+id/action_bookDetailFragment_to_homeTabFragment"
            app:destination="@id/homeTabFragment"
            app:popUpTo="@id/homeTabFragment"
            app:popUpToInclusive="false"/>
        <action
            android:id="@+id/action_bookDetailFragment_to_readerFragment"
            app:destination="@id/readerFragment" />
    </fragment>
    <fragment
        android:id="@+id/addBookFragment"
        android:name="com.example.thebook.ui.home.AddBookFragment"
        android:label="AddBookFragment"
        tools:layout="@layout/fragment_add_book">
        <action
            android:id="@+id/action_addBookFragment_to_homeTabFragment"
            app:destination="@id/homeTabFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/readerFragment"
        android:name="com.example.thebook.ui.reader.ReaderFragment"
        android:label="fragment_reader"
        tools:layout="@layout/fragment_reader" >
        <argument
            android:name="epubFileUrl"
            app:argType="string"/>
        <action
            android:id="@+id/action_readerFragment_to_bookDetailFragment"
            app:destination="@id/bookDetailFragment" />
    </fragment>
</navigation>