<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TheBook" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_700</item>
        <item name="colorPrimaryVariant">@color/primary_900</item>
        <item name="colorOnPrimary">@color/grey_100</item>

        <!-- Surface and background color -->
        <item name="colorSurface">@color/grey_700</item>
        <item name="colorOnSurface">@color/grey_100</item>
        <item name="colorOnPrimarySurface">@color/grey_100</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/secondary_800</item>
        <item name="colorSecondaryVariant">@color/secondary_700</item>
        <item name="colorOnSecondary">@color/grey_100</item>
        <!-- Ripple effect for selectable items -->
    </style>
</resources>